.container.proto-new
  = form_for (@project) do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          .proto-new-title
            = f.text_field :title, placeholder: "Title"
        .row
          .col-md-12
            .cover-image-upload
              = f.fields_for :thumbnails do |thumbnails_form|
                = thumbnails_form.file_field :image_url, placeholder: "main_image", class: 'main_image'
                = thumbnails_form.hidden_field :status, :value => "main"
          .col-md-12
            %ul.proto-sub-list.list-group
              %li.list-group-item.col-md-4
                .image-upload
                  = f.fields_for :thumbnails do |thumbnails_form|
                    = thumbnails_form.file_field :image_url, placeholder: "sub_image1", class: 'sub_image1'
                    = thumbnails_form.hidden_field :status, :value => "sub"
              %li.list-group-item.col-md-4
                .image-upload
                  = f.fields_for :thumbnails do |thumbnails_form|
                    = thumbnails_form.file_field :image_url, placeholder: "sub_image2", class: 'sub_image2'
                    = thumbnails_form.hidden_field :status, :value => "sub"
              %li.list-group-item.col-md-4
                .image-upload-plus
                  %span +
        .row.proto-description
          .col-md-12
            = f.text_field :catch_copy, placeholder: "Catch Copy"
          .col-md-12
            = f.text_field :concept, placeholder: "Concept"
          .col-md-12
            %h4 Tag List
            .row
              .col-md-3
                = text_field_tag "project[tag][]", "", placeholder: "Web Design"
              .col-md-3
                = text_field_tag "project[tag][]", "", placeholder: "UI"
              .col-md-3
                = text_field_tag "project[tag][]", "", placeholder: "Application"
        .row.text-center.proto-btn
          %button.btn.btn-lg.btn-primary.btn-block{type: "submit"} Publish

