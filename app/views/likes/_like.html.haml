- if user_signed_in?
  - if project.like_user(current_user.id)
    = button_to project_like_path(project, like), class: 'btn btn-default', method: :delete, remote: true do
      = image_tag("icon_red_heart.svg")
      LIKE
      %span
        = project.likes_count
  - else
    = button_to project_likes_path(project), class: 'btn btn-default', remote: true do
      = image_tag("icon_heart.svg")
      LIKE
      %span
        = project.likes_count

